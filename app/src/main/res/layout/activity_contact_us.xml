<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ContactUsActivity">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:paddingTop="@android:dimen/notification_large_icon_height"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="20">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="17"
                android:layout_marginTop="15dp"
                android:text="To call us please click here"
                android:textSize="18sp" />

            <Button
                android:id="@+id/callbutton"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/ic_call" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:weightSum="20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:text="To visit us please click here"/>

            <Button
                android:id="@+id/fbbutton"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/facebook"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/l3"
            android:weightSum="20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="17"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="To send us please click here"
                android:textSize="18sp" />

            <Button
                android:id="@+id/emailbtn"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/mail"
                tools:layout_editor_absoluteX="110dp"
                tools:layout_editor_absoluteY="198dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>